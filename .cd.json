{
  "desc": "前端自动化化配置",
  "env": ["node", "yarn"],
  "perBuild": "yarn",
  "buildPipeline": {
    "type": "parallel",
    "queue": [
      {
        "name": "provider_app",
        "buildCmd": "yarn build:provider-app-entry",
        "dockerfilePath": "./packages/provider-app-entry"
      },
      {
        "name": "consumer_app",
        "buildCmd": "yarn build:consumer-app",
        "dockerfilePath": "./packages/consumer-app-hub"
      },
      {
        "name": "node_web_server",
        "buildCmd": "yarn build:platform-web-server",
        "dockerfilePath": "./packages/platform-web-server"
      },
      {
        "name": "doc_website",
        "buildCmd": "yarn build:website-doc",
        "dockerfilePath": "./website-doc"
      }
    ]
  }
}