{
  "desc": "前端自动化化配置",
  "env": ["node", "yarn"],
  "perBuild": "yarn",
  "buildPipeline": {
    "type": "parallel",
    "queue": [
      {
        "name": "provider_app",
        "buildCmd": "yarn build:provider-app-entry",
        "dockerfilePath": "./packages/provider-app-entry"
      },
      {
        "name": "consumer_app",
        "buildCmd": "yarn build:web-platform",
        "dockerfilePath": "./packages/web-platform"
      },
      {
        "name": "node_web_server",
        "buildCmd": "yarn build:web-server",
        "dockerfilePath": "./packages/web-server"
      }
    ]
  }
}